<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ashtonmansion.tradeshowmanagement.activity.ViewBoothDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_50dp"
        android:paddingLeft="@dimen/dimen_50dp"
        android:paddingRight="@dimen/dimen_50dp"
        android:paddingTop="@dimen/dimen_50dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:id="@+id/booth_detail_header"
                    android:layout_width="match_parent"
                    android:layout_span="3"
                    android:textSize="@dimen/dimen_24sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/customer_search_prompt"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_search_field"
                    android:layout_width="@dimen/dimen_75dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_span="3"
                    android:text="@string/manual_customer_entry_prompt"
                    android:textSize="@dimen/dimen_16sp"
                    android:textStyle="italic|bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/add_new_customer_chkbox_label"
                    android:textStyle="bold" />

                <CheckBox android:id="@+id/booth_detail_add_new_customer_chkbox" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/invisible_cust_row1"
                android:visibility="gone">

                <TextView
                    android:text="@string/customer_name_string"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/br_customer_first_name"
                    android:hint="@string/customer_first_name_hint"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/br_customer_last_name"
                    android:hint="@string/customer_last_name_hint"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:id="@+id/invisible_cust_row2"
                android:visibility="gone">

                <TextView
                    android:text="@string/customer_address_label"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_address_1_field"
                    android:layout_span="2"
                    android:hint="@string/customer_address_1_hint"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:id="@+id/invisible_cust_row3"
                android:visibility="gone">

                <TextView android:text="" />

                <EditText
                    android:id="@+id/customer_address_2_field"
                    android:hint="@string/customer_address_2_hint"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/customer_address_3_field"
                    android:hint="@string/customer_address_3_hint"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:id="@+id/invisible_cust_row4"
                android:visibility="gone">

                <TextView
                    android:text="@string/customer_city_label"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_address_city_field"
                    android:layout_span="2"
                    android:hint="@string/customer_city_hint"
                    android:textAlignment="center" />

            </TableRow>

            <TableRow
                android:id="@+id/invisible_cust_row5"
                android:visibility="gone">

                <TextView
                    android:text="@string/customer_state_label"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/customer_address_state_spinner"
                    android:entries="@array/state_array_entries"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/customer_address_zip_field"
                    android:hint="@string/customer_zip_hint"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:id="@+id/invisible_cust_row6"
                android:visibility="gone">

                <TextView
                    android:text="@string/customer_email_label"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_email_field"
                    android:layout_span="2"
                    android:hint="@string/customer_email_hint"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:id="@+id/invisible_cust_row7"
                android:visibility="gone">

                <TextView
                    android:text="@string/customer_phone_label"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customer_phone_field"
                    android:layout_span="2"
                    android:hint="@string/customer_phone_hint"
                    android:inputType="phone"
                    android:textAlignment="center" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow android:layout_gravity="center">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/finalize_reservation_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finalize_reservation_btn_text"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>