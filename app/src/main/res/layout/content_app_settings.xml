<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ashtonmansion.tradeshowmanagement.activity.ApplicationSettings"
    tools:showIn="@layout/activity_app_settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_75dp"
        android:layout_marginStart="@dimen/dimen_75dp"
        android:layout_marginTop="@dimen/dimen_25dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    style="@style/activity_header_style"
                    android:text="@string/application_settings_string" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/quick_ops_delete_all"
                    style="@style/button_font_style"
                    android:layout_marginBottom="@dimen/dimen_25dp"
                    android:background="@color/colorAccent"
                    android:text="@string/quick_ops_button_delete_all" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/quick_ops_delete_all_tags"
                    style="@style/button_font_style"
                    android:layout_marginBottom="@dimen/dimen_25dp"
                    android:background="@color/colorAccent"
                    android:text="@string/quick_ops_button_delete_all_tags" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/create_custom_tender_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_25dp"
                    android:background="@color/lv_pressed"
                    android:text="@string/create_custom_tender_button_text" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/delete_custom_tender_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_25dp"
                    android:background="@color/lv_pressed"
                    android:text="@string/delete_custom_tender_button_text" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>