<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="activity_header_style">
        <item name="android:textColor">@color/matching_header_color</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/dimen_36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="table_header_text_style">
        <item name="android:textSize">@dimen/dimen_36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="table_header_text_style_sortable">
        <item name="android:textSize">@dimen/dimen_36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/matching_header_color</item>
    </style>

    <style name="span_2_and_table_header_style">
        <item name="android:layout_span">2</item>
        <item name="android:textSize">@dimen/dimen_36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/matching_header_color</item>
    </style>

    <style name="large_table_row_font_station">
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="no_rows_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/dimen_36sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="reserve_through_register_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/dimen_36sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_span">2</item>
        <item name="android:layout_marginTop">@dimen/dimen_150dp</item>
    </style>

    <style name="selected_customer_style">
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="selected_booth_label_style">
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="prompt_text_font_style">
        <item name="android:textColor">@color/matching_header_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/dimen_24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="no_shows_style">
        <item name="android:textColor">@color/matching_header_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/dimen_24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_font_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:textSize">@dimen/button_text_size_32sp</item>
    </style>

    <style name="row_item_button_style">
        <item name="android:textSize">@dimen/dimen_24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="app_settings_button_style">
        <item name="android:layout_marginBottom">@dimen/dimen_35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">@dimen/dimen_25dp</item>
        <item name="android:paddingEnd">@dimen/dimen_25dp</item>
    </style>

    <style name="table_line_item_font_shows">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/line_item_text_size</item>
    </style>

    <style name="available_booth_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/available_booth_color</item>
    </style>

    <style name="reserved_booth_style">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/reserved_booth_color</item>
    </style>

    <style name="existing_customer_lv_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <item name="android:layout_marginStart">@dimen/dimen_25dp</item>
    </style>

    <style name="trade_show_row_style">
        <item name="android:textColor">@color/matching_header_color</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_30sp</item>
    </style>
</resources>
