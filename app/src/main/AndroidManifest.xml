<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashtonmansion.amtradeshowmanagement">

    <uses-sdk android:minSdkVersion="17" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ashtonmansion.tradeshowmanagement.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ashtonmansion.tradeshowmanagement.activity.ConfigureReservations" />
        <activity
            android:name="com.ashtonmansion.tradeshowmanagement.activity.MakeReservation"
            android:label="@string/title_activity_make_reservation"
            android:parentActivityName="com.ashtonmansion.tradeshowmanagement.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashtonmansion.tradeshowmanagement.HomeActivity" />
        </activity>
        <activity
            android:name="com.ashtonmansion.tradeshowmanagement.activity.EmailResConfirmation"
            android:label="@string/title_activity_email_res_confirmation"
            android:parentActivityName="com.ashtonmansion.tradeshowmanagement.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ashtonmansion.tradeshowmanagement.HomeActivity" />
        </activity>
    </application>

</manifest>